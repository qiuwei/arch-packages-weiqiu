# Maintainer: dale mallion <dale.mallion@gmail.com>
pkgname=mac-os-x-icons
pkgver=3.6
pkgrel=1
pkgdesc="Gnome 3.6 compatible MAC OS X Lion Icon Theme by noobslab"
arch=('any')
url="http://www.noobslab.com/"
license=('unknown')
source=('https://launchpad.net/~noobslab/+archive/themes/+files/mac-os-x-icons_3.6~quantal.tar.gz')
md5sums=('0a6637d1ec59f3e656430b2edf42e1d5')
build() {
  cd "$srcdir/icons"
  mkdir -p "${pkgdir}"/usr/share/icons

  cp -rf $pkgname "${pkgdir}"/usr/share/icons/

  chmod 755 -R "$pkgdir"/usr/share/icons
}
